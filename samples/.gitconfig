[user]
	name = Your Name
	email = Your Email
[core]
	editor = vim
    autocrlf = false
    excludefile = ~/.gitignore
[merge]
    ff = false
[push]
    default = simple
[color]
    ui = true
[alias]
	lg = log --format=\"%Cgreen%ad%Creset %C(cyan)%<(20)%an%Creset %C(auto)%h%Creset%C(auto)%d%Creset %s\" --date=short
